<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="center_horizontal"
    android:background="@color/colorPrimary"
    >

    <LinearLayout
        android:id="@+id/mainButtonArea"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal"
        >

    <LinearLayout
        android:id="@+id/mainTab"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible"
        android:onClick="onMainClick">
        <ImageView
            android:id="@+id/mainSideLight"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorAccent"
            android:visibility="invisible"
            />
        <LinearLayout
            android:id="@+id/menu_content"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/menuIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/menu_icon"
                />
            <TextView
                android:id="@+id/include_main_first_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#fff"
                android:text="目录"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/searchTab"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible"
        android:onClick="onMainClick">
        <ImageView
            android:id="@+id/searchSideLight"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorAccent"
            android:visibility="invisible"
            />
        <LinearLayout
            android:id="@+id/search_content"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/include_main_two_image"
                android:layout_width="36dp"
                android:background="@drawable/search_icon"
                android:layout_height="36dp"
                />
            <TextView
                android:id="@+id/include_main_two_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#fff"
                android:text="搜索"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/settingTab"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible"
        android:onClick="onMainClick">
        <ImageView
            android:id="@+id/settingSideLight"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorAccent"
            android:visibility="invisible"
            />
        <LinearLayout
            android:id="@+id/setting_content"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/include_main_three_image"
                android:layout_marginTop="10dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/setting_icon"
                />
            <TextView
                android:id="@+id/include_main_three_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#fff"
                android:text="设置"/>
        </LinearLayout>
</LinearLayout>

        <LinearLayout
            android:id="@+id/back_button"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/backbtn_image"
                android:layout_marginTop="18dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/back_icon"
                />
            <TextView
                android:id="@+id/backbtn_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textSize="16dp"
                android:textColor="#fff"
                android:text="返回"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>


